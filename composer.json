{
  "name": "hmmh/solr-file-indexer",
  "description": "Solr file indexer for Typo3",
  "keywords": ["typo3", "solr", "file", "tika", "apache", "indexer"],
  "type": "typo3-cms-extension",
  "license": "GPL-3.0-or-later",

  "authors": [
    {
      "name": "Sascha Wilking",
      "email": "sascha.wilking@hmmh.de",
      "homepage": "https://hmmh.de/",
      "role": "Developer"
    }
  ],

  "require": {
    "php": ">=7.0",
    "typo3/cms-core": ">=9.5",
    "typo3-ter/solr": ">=8.2"
  },

  "require-dev": {
    "nimut/testing-framework": "^3.0"
  },

  "suggest": {
    "apache-solr-for-typo3/tika": ">=2.4"
  },

  "replace": {
    "solr_file_indexer": "self.version"
  },

  "autoload": {
    "psr-4": {
      "HMMH\\SolrFileIndexer\\": "Classes"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "HMMH\\SolrFileIndexer\\Tests\\": "Tests"
    }
  },

  "repositories": [
    {
      "type": "composer",
      "url": "https:\/\/composer.typo3.org\/"
    }
  ]
}
